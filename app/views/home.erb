

<ul id="all-posts">
	<% @posts.reverse.each_with_index do |post, index| %>
		<li class="single-post">
			<% num = index < 9 ? " #{index + 1}" : "#{index + 1}"%>
      <span class="post-num"><%= num %>. </span>
      <a href="<%= post.id %>" class="post-vote">Î”</a>
			<span class="post-link"><a href="/posts/<%= post.id %>"><%= post.title %></a></span>
			<span class="post-username">(<%= post.user.username %>)</span><br>
      <% comments = post.comments.length %>
      <% comment_s = comments == 1 ? 'comment' : 'comments' %>
      <span class="post-comment-count">[<%= comments %> <%= comment_s %>,</span>
      <% post_points = PostVote.where('post_id = ?', post.id).count %>
      <% point_s = post_points == 1 ? 'point' : 'points' %>
      <span class="post-points"><%= post_points %> <%= point_s %>]</span>
		</li>
	<% end %>
</ul>



