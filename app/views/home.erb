

<ul id="all-posts">
	<% @posts.reverse.each_with_index do |post, index| %>
		<li class="single-post">
			<% num = index < 9 ? " #{index + 1}" : "#{index + 1}"%>
      <span class="post-num"><%= num %>. </span>
      <span class="upvote">Î”</span>
			<span class="post-link"><a href="/posts/<%= post.id %>"><%= post.title %></a></span>
			<span class="post-username">(<%= post.user.username %>)</span><br>
      <span class="post-comment-count">[<%= post.comments.length %> comments,</span>
      <span class="post-points">0 points]</span>
		</li>
	<% end %>
</ul>



